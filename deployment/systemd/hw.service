[Unit]
Description=individual hardware control
Requires=network-online.target
After=network-online.target

[Service] 
EnvironmentFile=/etc/environment
ExecStart=/home/vq-user/qline/server/hw.py
Restart=always
User=vq-user
WorkingDirectory=/home/vq-user/qline/server
StandardOutput=append:/home/vq-user/qline/log/hw.log
StandardError=append:/home/vq-user/qline/log/hw.log

[Install] 
WantedBy=multi-user.target
